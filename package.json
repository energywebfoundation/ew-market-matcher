{
  "name": "ew-market-matcher",
  "version": "1.0.0",
  "description": "",
  "main": "dist/js/src/exports.js",
  "types": "dist/js/src/exports.d.ts",
  "scripts": {
    "test": "mocha -r ts-node/register src/test/*.ts",
    "start": "npm run build && node dist/js/src/index.js",
    "debug": "node --inspect-brk dist/js/src/index.js",
    "start-test-backend": "node node_modules/ew-utils-testbackend/index.js",
    "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -g 0 -l 80000000 -e 1000000 -a 20",
    "build": "rm -rf dist/ && npm run generate-schemas && tsc && cp -R schemas dist/js/schemas",
    "generate-schemas": "rm -rf schemas/ && mkdir schemas/ && npm run generate-sim-flow-schema && npm run generate-rule-schema && npm run generate-conf-schema",
    "generate-sim-flow-schema": "typescript-json-schema --required --ignoreErrors  tsconfig.json SimulationFlow > schemas/simulation-description.schema.json",
    "generate-rule-schema": "typescript-json-schema --required --ignoreErrors  tsconfig.json RuleConf > schemas/rule.schema.json",
    "generate-conf-schema": "typescript-json-schema --required --ignoreErrors  tsconfig.json MatcherConf > schemas/conf.schema.json",
    "prettier": "prettier --write --config-precedence file-override './src/**/*'",
    "lint": "./node_modules/.bin/tslint --fix  'src/**/*{.ts,.tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/ew-market-matcher.git"
  },
  "author": "",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/energywebfoundation/ew-market-matcher/issues"
  },
  "homepage": "https://github.com/energywebfoundation/ew-market-matcher#readme",
  "dependencies": {
    "@types/log-symbols": "2.0.0",
    "@types/mathjs": "3.21.0",
    "ethereumjs-tx": "1.3.4",
    "ew-asset-registry-lib": "energywebfoundation/ew-asset-registry-lib#71637c384a2d1075001ff44a26d9926e96674167",
    "ew-utils-general-lib": "energywebfoundation/ew-utils-general-lib#3a0cb9e58c2f18776b59771d39981a44d6640d96",
    "ew-utils-testbackend": "energywebfoundation/ew-utils-testbackend#f4448692bebfe5019570533114557a943319ff2d",
    "ew-market-lib": "energywebfoundation/ew-market-lib.git#41aae36f25d4d5769a6dfe38638c6b5dba9a4caf",
    "ew-origin-lib": "energywebfoundation/ew-origin-lib.git#91e1786bd67394fe2ca2db8ef3af89a1bdb52c4c",
    "ganache-cli": "6.3.0",
    "jsonschema": "1.2.4",
    "log-symbols": "2.2.0",
    "web3": "1.0.0-beta.37",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "5.0.0",
    "@types/node": "9.4.5",
    "@types/web3": "1.0.14",
    "chai": "4.1.2",
    "json-schema-to-typescript": "5.5.0",
    "json2ts": "0.0.7",
    "lint-staged": "8.1.7",
    "mocha": "5.0.5",
    "prettier": "1.17.1",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-lines-between-class-members": "1.3.1",
    "tslint-sonarts": "1.9.0",
    "ts-node": "5.0.1",
    "typescript": "3.2.4",
    "typescript-json-schema": "0.25.1"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts",
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write --config ./.prettierrc --config-precedence file-override",
      "git add"
    ]
  }
}
